<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageSPB"
    android:layout_width="350dp"
    android:layout_height="320dp"

    android:orientation="vertical"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_centerInParent="true"
            android:clipChildren="true">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgfield"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/field"
                app:riv_corner_radius="50dp" />

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="320dp"
                android:layout_centerInParent="true">

                <ImageButton
                    android:id="@+id/icon_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"

                    android:background="@drawable/circle_ic_like"
                    android:src="@drawable/love" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp">

                    <TextView
                        android:id="@+id/itemName_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"

                        android:text="Sân bóng UTE"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/itemType_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemName_field"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"

                        android:text="Sân 7 người"
                        android:textColor="#FFFFFF"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/itemDescribe_field"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemType_field"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="Mô tả Sân bóng UTE"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp" />

                    <per.wsj.library.AndRatingBar
                        android:id="@+id/rating_bar"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/itemDescribe_field"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:drawablePadding="1dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="3.4"
                        android:stepSize="0.1"
                        app:starColor="#ffc107"
                        app:subStarColor="#2b2d30" />
                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
