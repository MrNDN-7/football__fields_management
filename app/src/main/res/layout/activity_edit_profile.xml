<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Activity.ThanhBinh.Edit_profile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ic_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/goback" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ic_check"
            android:layout_width="50dp"

            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0c8ce9">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Hình ảnh -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avtImg_edtprofile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@drawable/circle_shape"
                android:src="@drawable/meme"
                app:civ_border_color="#FF000000"
                app:civ_border_width="1dp" />

            <!-- Text -->
            <TextView
                android:id="@+id/txt_edit_avtimg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/avtImg_edtprofile"

                android:background="#2b2d30"
                android:gravity="center"
                android:text="Chạm để thay đổi"
                android:textColor="#fef7ff"
                android:textSize="20dp" />

        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Tên:"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtName"
            android:layout_toEndOf="@id/txtTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập tên của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtSDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại:"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtSDT"
            android:layout_toEndOf="@id/txtSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập số điện thoại của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginTop="5dp"

            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_toEndOf="@id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập email của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính:"
            android:layout_marginTop="5dp"

            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtGender"
            android:layout_toEndOf="@id/txtGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập giới tính của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh:"
            android:layout_marginTop="5dp"

            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtDateOfBirth"
            android:layout_toEndOf="@id/txtDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập ngày sinh của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập:"
            android:layout_marginTop="5dp"

            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtUsername"
            android:layout_toEndOf="@id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập username của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="0dp"
        android:padding="10dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:"
            android:layout_marginTop="5dp"

            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_alignParentStart="true" />

        <!-- Ô nhập liệu -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_toEndOf="@id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập password của bạn"
            android:inputType="text"
            android:gravity="end"
            android:layout_marginStart="8dp" />

    </RelativeLayout>
</LinearLayout>